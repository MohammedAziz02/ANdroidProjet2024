<?xml version="1.0" encoding="utf-8"?>
<!-- activity_recipe.xml -->

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F6ED"
    tools:context=".Activities.RecipeActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >


   <!-- <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Recipes APP"
        android:textColor="@color/white"
        android:background="#FFA500"
        android:padding="10dp"
        />-->

    <!-- just to center this item -->

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:backgroundTint="#E8810C"
        android:text="delete"

        />

    <Button
        android:id="@+id/modifyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:backgroundTint="#E8810C"
        android:text="Modify"

        />
    <View
        android:layout_width="match_parent"
        android:layout_margin="7dp"
        android:layout_height="3dp"
        android:background="#E8810C" />

    <ImageView
        android:id="@+id/imageViewRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_below="@id/textViewRecipeName"
        android:layout_margin="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_margin="7dp"
        android:layout_height="3dp"
        android:background="#E8810C" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textViewRecipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Recipe Name"
            android:textColor="#E8810C"
            android:textSize="24sp"
            android:textStyle="bold" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textViewType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:layout_below="@id/textViewIngredients"
            android:text="Type"
            android:layout_margin="20dp"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray" />
        <TextView
            android:id="@+id/textViewDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:layout_below="@id/textViewIngredients"
            android:text="DifficultÃ©"
            android:layout_margin="20dp"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_semibold"
        android:layout_below="@id/textViewIngredients"
        android:text="Description"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ingredients : "
        android:fontFamily="@font/poppins_semibold"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:textColor="#E8810C"
        />
        <!--android:background="@drawable/rounded_corners"-->

    </RelativeLayout>


    <TextView
        android:id="@+id/textViewIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_semibold"
        android:layout_below="@id/imageViewRecipe"
        android:text="Ingredients"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:textColor="@android:color/black" />






</LinearLayout>




</ScrollView>
